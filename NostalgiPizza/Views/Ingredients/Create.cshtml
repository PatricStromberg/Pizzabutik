@model NostalgiPizza.Models.CreateViewModel

<section class="content">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Create ingredient</h3>
                </div>
                <form asp-action="Create" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="@Model.NewName"></label>
                            <input asp-for="@Model.NewName" type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Price"></label>
                            <input asp-for="@Model.Price" type="text" class="form-control" placeholder="Price">
                        </div>
                    </div>
                    <div class="box-footer">
                        <a class="btn btn-default" asp-controller="Home" asp-action="Details">Back</a>
                        <button type="submit" class="btn btn-primary pull-right">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
