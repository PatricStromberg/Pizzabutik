@model NostalgiPizza.Models.PaymentViewModel

@{
    Layout = "_EditLayout";
}

<form asp-controller="Payment" asp-action="Payment" method="post">
    <input type="hidden" asp-for="@Model.Cart.Id" />

    @for (var ci = 0; ci < Model.Cart.CartItems.Count; ci++)
    {
        <p>
            @Model.Cart.CartItems[ci].Quantity st
            @Model.Cart.CartItems[ci].Dish.Name
            @Model.Cart.CartItems[ci].Dish.Price kr
        </p>

        <p>
            @for (var cii = 0; cii < Model.Cart.CartItems[ci].CartItemIngredients.Count; cii++)
            {
                @Model.Cart.CartItems[ci].CartItemIngredients[cii].Ingredient.Name
            }
        </p>
    }

    <p>Totalt: </p>


    Firstname:  <input asp-for="@Model.CurrentUser.FirstName" /> <br />
    Lastname:  <input asp-for="@Model.CurrentUser.LastName" /> <br />
    Address:  <input asp-for="@Model.CurrentUser.ShippingAddress" /> <br />
    Zip:  <input asp-for="@Model.CurrentUser.ShippingZip" /> <br />
    City:  <input asp-for="@Model.CurrentUser.ShippingCity" /> <br />
    Email:  <input asp-for="@Model.CurrentUser.Email" /> <br />
    PHone:  <input asp-for="@Model.CurrentUser.HomePhone" /> <br />
    Card number:  <input asp-for="@Model.CurrentUser.CardNumber" /> <br />
    Expiration month:  <input asp-for="@Model.CurrentUser.ExpirationMonth" /> <br />
    Expiration year:  <input asp-for="@Model.CurrentUser.ExpirationYear" /> <br />
    CVS: <input asp-for="@Model.CurrentUser.CVS" /><br />
    <button type="submit">Pay</button>
</form>
