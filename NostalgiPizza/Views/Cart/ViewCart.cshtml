@model NostalgiPizza.Models.Cart

@{
    Layout = "_EditLayout";
}

@foreach (var cartItem in Model.CartItems)
{
    <p>
        @cartItem.Quantity st 
        @cartItem.Dish.Name 
        @cartItem.Dish.Price kr 
        <a asp-controller="Cart" asp-action="EditCartItem" asp-route-id="@cartItem.Id" data-target="#modifyCartItemModal" data-toggle="modal">Edit</a> 
        <a asp-controller="Cart" asp-action="DeleteCartItem" asp-route-id="@cartItem.Id">Delete</a>
    </p>
    
    <p>
        @foreach (var ingredient in cartItem.CartItemIngredients)
        {
        @ingredient.Ingredient.Name 
        }
    </p>
    
}
<a asp-controller="Payment" asp-action="Payment" asp-route-id="@Model.Id">Pay</a>

<!-- Modal -->
<div class="modal fade" id="modifyCartItemModal" tabindex="-1" role="dialog" aria-labelledby="modifyDishModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>